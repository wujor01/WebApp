@model Model.EF.Credential

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section JsFooter{
    <script type="text/javascript">

        $(function () {

            $('#SelectedIDRole').chosen({ width: '500px' });

        });
    </script>
    <script type="text/javascript">

        $(function () {

            $('#UserGroupID').chosen({ width: $('.panel-collapse.collapse.in select').eq(0).width() + 'px' });

        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Credential</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.UserGroupID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.UserGroupID, null, new { htmlAttributes = new { @class = "MakeWide" } })
                        @Html.ValidationMessageFor(model => model.UserGroupID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RoleID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ListBoxFor(model => model.SelectedIDRole, null, new { htmlAttributes = new { @class = "form-control", multiple = "multiple" } })
                        @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
