@model Model.EF.DailyList

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
<div>
    <h4>Chi tiết bảng kê #@Html.DisplayFor(model => model.ID)</h4>
    <hr />
    <div class="panel-body">
        <div class="row form-group">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <dl class="dl-horizontal">
                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Employee_ID)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Employee_ID)</dd>


                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Room)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Room)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Customer.Name)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Customer.Name)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.TimeIn)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.TimeIn)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.TimeOut)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.TimeOut)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Ticket.Name)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Ticket.Name)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Ticket.Price)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Model.Ticket.Price.Value.ToString("0#,##")</dd>

                        <dt class=".col-md-3 .col-md-pull-9">Code</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Voucher.DiscountPercent)%</dd>

                        @if (Model.Tip.HasValue)
                        {
                            <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Tip)</dt>
                            <dd class=".col-md-9 .col-md-push-3">@Model.Discount.Value.ToString("0#,##")</dd>

                        }

                        @if (Model.Discount.HasValue)
                        {
                            <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Discount)</dt>
                            <dd class=".col-md-9 .col-md-push-3">@Model.Discount.Value.ToString("0#,##")</dd>
                        }

                        @if (Model.Taxi_ID.HasValue)
                        {
                            <dt class=".col-md-3 .col-md-pull-9">Hoa hồng CTV</dt>
                            <dd class=".col-md-9 .col-md-push-3">@Model.Taxi.Price.Value.ToString("0#,##")</dd>
                        }



                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Status)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Request)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Request)</dd>

                        <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class=".col-md-9 .col-md-push-3">@Html.DisplayFor(model => model.Description)</dd>

                        <hr />
                        @if (Model.Total.HasValue)
                        {
                            <dt class=".col-md-3 .col-md-pull-9">@Html.DisplayNameFor(model => model.Total)</dt>
                            <dd class=".col-md-9 .col-md-push-3">@Model.Total.Value.ToString("0#,##")</dd>
                        }
                    </dl>  
                </table>
            </div>
            </div>
        </div>
</div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
