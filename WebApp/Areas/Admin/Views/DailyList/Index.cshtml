@model PagedList.IPagedList<Model.EF.DailyList>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh sách bảng kê
}

@section JsFooter{
    <script>
        $("#txtsearch").on("keyup", function () {
            var txtenter = $(this).val();
            $("table tr").each(function (results) {
                if (results!==0) {
                    var id = $(this).find("td:nth-child(3)").text();//Vị trí của <td>từ 1 đếm xuống tương ứng với mã KTV
                    if (id.indexOf(txtenter) !== 0 && id.toLowerCase().indexOf(txtenter.toLowerCase()) < 0)
                    {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }
            })
        });
    </script>
    }
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách bảng kê
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "DailyList", FormMethod.Get))
                {

                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                @*<input type="text" id="txtsearch" class="form-control" placeholder="Nhập vào mã KTV" />*@
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Nhập vào ID hoặc mã KTV" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/DailyList/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Chi nhánh</th>
                                <th>ID</th>
                                <td>KTV</td>
                                <td>Phòng</td>
                                <td>Giờ vào</td>
                                <td>Giờ ra</td>
                                <td>Giá vé</td>
                                <td>Tip</td>
                                <td>Code</td>
                                <td>GTT</td>
                                <td>Taxi-Grab-CTV</td>
                                <td>Tổng tiền</td>
                                <td>Yêu cầu</td>
                                <td>Xác nhận</td>
                                <td>Ghi chú</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <th>@item.Room.Department.Name</th>
                                    <th>#@item.ID</th>
                                    <td>@item.Employee_ID</td>
                                    <td>@item.Room.Name</td>
                                    <td>@(string.Format("{0:HH:mm}", item.TimeIn))</td>
                                    <td>@(string.Format("{0:HH:mm}", item.TimeOut))</td>
                                    <td>@(string.Format("{0:#,##0}", item.Ticket.Price))</td>
                                    <td>@(string.Format("{0:#,##0}", item.Tip))</td>
                                    <td>@item.Voucher.Code</td>
                                    <td>@(string.Format("{0:#,##0}", item.Discount))</td>

                                    @{
                                        if (item.Taxi_ID != null)
                                        {
                                            @*<td>@item.Taxi.Commission</td>*@
                                            <td>@(string.Format("{0:#,##0}", item.Taxi.Price))</td>
                                            <td>@(string.Format("{0:#,##0}", item.Total))</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                            <td>@(string.Format("{0:#,##0}", item.Total))</td>
                                        }
                                    }

                                    <td>@item.Request</td>
                                    <td>@Html.Raw(item.Status ? "<strong style=\"color:Green;\">Đã xác nhận</strong>" : "<strong style=\"color:Tomato;\">Đang chờ</strong>")</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a href="/Admin/DailyList/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
